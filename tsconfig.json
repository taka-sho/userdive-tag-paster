{
  "compilerOptions": {
    "lib": ["es6", "es7", "DOM"],
    "jsx": "react",
    "jsxFactory": "h",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "target": "es5",
    "experimentalDecorators": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "__tests__/*.ts",
    "app/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
